&ldb {
	
	/*split-mode;*/
	status = "okay";
	lvds-channel@0 {
                fsl,data-mapping = "spwg";
		/*fsl,data-mapping = "jeida";*/
                fsl,data-width = <24>;
		primary;
		crtc = "ipu2-di0";
		status = "okay";
		display-timings {
                        native-mode = <&timing0>;
                        timing0: hsd100pxn1 {
                                clock-frequency = <94848000>;
                                hactive = <1920>;
                                vactive = <720>;
                                hback-porch = <40>;
                                hfront-porch = <100>;
                                vback-porch = <10>;
                                vfront-porch = <20>;
                                hsync-len = <20>;
                                vsync-len = <10>;

                        };

                };
	};

	lvds-channel@1 {
		status = "disabled";
	};
};

&ipu1 {
	bypass_reset = <1>;
	status = "okay";
};

&ipu2 {
	bypass_reset = <0>;
	status = "okay";
};



